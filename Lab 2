#include <iostream>
#include <string>
using namespace std;

struct timeType
{
    int hr;
    double min;
    int sec;
};

struct tourType
{
    string cityName;
    int distance;
    timeType travelTime;
};


tourType destination;

void input(void);
void output(void);


void input(void){
    cout << "\nenter city: ";
    cin >> destination.cityName;
    cout << "\nenter distance: ";
    cin >> destination.distance;
    cout << "\nenter time in hours: ";
    cin >> destination.travelTime.hr;
    cout << "\nenter time in minutes: ";
    cin >> destination.travelTime.min;
}

void output(void)
{
    cout<< destination.cityName << " "
         << destination.distance << " km "
         << destination.travelTime.hr << " hour and"
         << destination.travelTime.min << " minutes"
         << endl;
}

int main() 
{
   input();
   output();
}
